<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp"
    android:id="@+id/question_cardview"
    app:cardElevation="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_image"
        android:layout_width="108dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="255dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/question" />

    <TextView
        android:id="@+id/question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/question_image"
        android:layout_alignTop="@+id/question_image"
        android:layout_alignEnd="@+id/question_image"
        android:layout_marginStart="115dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-204dp"
        android:gravity="center"
        android:text="title"
        android:textSize="19dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/question_content"
        android:layout_width="180dp"
        android:layout_height="@dimen/_42sdp"
        android:layout_below="@+id/question_title"
        android:layout_alignStart="@+id/question_title"
        android:layout_alignEnd="@+id/question_title"
        android:layout_alignBottom="@+id/question_image"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:text="question content" />

    <ImageView
        android:id="@+id/nav_btn"
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:layout_alignTop="@+id/question_content"
        android:layout_alignBottom="@+id/question_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/question_content"
        android:src="@drawable/ic_arrow" />

</RelativeLayout>


